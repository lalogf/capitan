<div class="container-fluid p-20">
  <div class="page-header clearfix">
      <h1 class="pull-left">Tracks</h1>
      <div class="pull-right">
        <%= link_to 'Crear un nuevo track', new_track_path, :class => "btn btn-primary btn-new" %>
      </div>
  </div>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>Nombre</th>
        <th>Descripción</th>
        <th>Color</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @tracks.each do |track| %>
        <tr>
          <td><%= track.sequence %></td>
          <td><%= link_to track.name, track %></td>
          <td><%= track.description %></td>
          <td><%= track.color %></td>
          <td>
            <%= link_to edit_track_path(track) do %>
              <button class="btn btn-primary"><i class="fa fa-pencil" aria-hidden="true"></i>&nbsp;Editar</button>
            <% end %>
            <%= link_to track, method: :delete, data: { confirm: '¿Estás seguro?' } do %>
              <button class="btn btn-primary"><i class="fa fa-trash" aria-hidden="true"></i>&nbsp;Eliminar</button>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
