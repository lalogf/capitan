$(function () {
  $('#points-comparative-chart').highcharts({
    chart: {
      type: 'column'
    },
    title: {
    	text: ''
    },
    credits: {
      enabled: false
   	},    
    yAxis: {
      allowDecimals: false,
      title: {
        text: 'Puntos'
      }
    },
    xAxis: {
        categories: ['Promedio', 'Yo','Máximo Puntaje']
    },    
    tooltip: {
      formatter: function () {
        return this.point.y;
      }
    },
    series: [{
    	name: '',
    	showInLegend: false,
      data: [{
      	name: 'Promedio',
      	color: '#66B26D',
      	y: <%= zero_or_number @avg_students_points %>
      },{
      	name: 'Yo',
      	color: '#4790C8',
      	y: <%= zero_or_number @max_student_points %>
      },{
      	name: 'Máximo puntaje',
      	color: '#E2BA39',
      	y: <%= zero_or_number @max_total_points %>
      }],
      animation: {
        duration: 1500,
        easing: 'easeOutBounce'
      }
    }]
  });
});