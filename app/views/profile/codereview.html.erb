<% @pages.each do |page| %>
<section class="container minh-600">
  <h3><%= page.lesson.title %></h3>
  <div class="table-responsive">
    <% reviews = Review.where(user_id: current_user.id, page_id: page.id) %>
    <% if reviews.count > 0 %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>#</th>
          <th>Pregunta</th>
          <th>Respuesta</th>
        </tr>
      </thead>
      <tbody>
        <% reviews.each_with_index do |review, index| %>
          <tr>
            <th class="scope"><%= index + 1%></th>
            <td><%= review.question.description %></td>
            <td><%= review.answer %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <% else %>
      <p class="text-center">Aún no te han realizado un code review.</p>
    <% end %>
  </div>
</section>
<% end %>

