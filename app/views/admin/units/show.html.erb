<div class="container-fluid p-20">
    <div class="breadcrumb">
      <%= link_to @track.name, [:admin,@track] %> >
      <%= link_to @course.name, admin_track_course_path(@track,@course) %> >
      <span><%= @unit.title %></span>
    </div>
    <div class="panel panel-default">
      <div class="panel-heading clearfix">
        <div class="pull-left">Información básica de la unidad</div>
      </div>
      <div class="panel-body">
          <p>
            <strong>Sequence:</strong>
            <%= @unit.sequence %>
          </p>
          <p>
            <strong>Title:</strong>
            <%= @unit.title %>
          </p>
          <p>
            <strong>Description:</strong>
            <%= @unit.description %>
          </p>
          <p>
            <strong>Duración:</strong>
            <%= @unit.duration %>
          </p>
      </div>
    </div>
    <div class="panel panel-default">
      <div class="panel-heading clearfix">
        <div class="pull-left" style="margin-top:5px;">LECCIONES</div>
        <%= link_to "Nueva Lección", new_admin_track_course_unit_lesson_path(@track,@course,@unit), :class => "btn btn-primary pull-right" %>
      </div>
      <div class="panel-body">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>#</th>
              <th>Título</th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @unit.lessons.order(:sequence).each do |lesson| %>
              <tr>
                <td><%= lesson.sequence %></td>
                <td><%= link_to lesson.title, admin_track_course_unit_lesson_path(@track,@course,@unit,lesson) %></td>
                <td style="width:12%;">
                  <%= link_to edit_admin_track_course_unit_lesson_path(@track,@course,@unit,lesson) do %>
                    <button class="btn btn-primary"><i class="fa fa-pencil" aria-hidden="true"></i>&nbsp;Editar</button>
                  <% end %>
                  <%= link_to [:admin,@track,@course,@unit,lesson], method: :delete, data: { confirm: '¿Está seguro?' } do %>
                    <button class="btn btn-primary"><i class="fa fa-trash" aria-hidden="true"></i>&nbsp;Eliminar</button>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>


</div>
