<div class="container-fluid p-20">
  <div class="breadcrumb">
    <%= link_to @track.name, admin_track_path(@track) %> >
    <span><%= @course.name %></span>
  </div>
  <div class="panel panel-default">
    <div class="panel-heading">Información básica del curso</div>
    <div class="panel-body">
      <p>
        <strong>Nombre:</strong>
        <%= @course.name %>
      </p>

      <p>
        <strong>Descripción:</strong>
        <%= @course.description %>
      </p>
      <p>
        <strong>Duración:</strong>
        <%= @course.duration %>
      </p>
    </div>
  </div>
  <div class="panel panel-default">
    <div class="panel-heading clearfix">
      <div class="pull-left" style="margin-top:5px;">UNIDADES</div>
      <%= link_to "Nueva unidad", new_admin_track_course_unit_path(@track,@course), :class => "btn btn-primary pull-right" %>
    </div>
    <div class="panel-body">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>#</th>
            <th>Nombre Unidad</th>
            <th>Descripión</th>
            <th>Duración</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @course.units.order(:sequence).each do |unit| %>
            <tr>
              <td><%= unit.sequence %></td>
              <td><%= link_to unit.title, admin_track_course_unit_path(@track,@course,unit)  %></td>
              <td><%= unit.description %></td>
              <td style="width: 8%"><%= unit.duration %></td>
              <td style="width: 12%">
                <%= link_to edit_admin_track_course_unit_path(@track,@course,unit) do %>
                  <button class="btn btn-primary"><i class="fa fa-pencil" aria-hidden="true"></i>&nbsp;Editar</button>
                <% end %>
                <%= link_to [:admin,@track,@course,unit], method: :delete, data: { confirm: '¿Está seguro?' } do %>
                  <button class="btn btn-primary"><i class="fa fa-trash" aria-hidden="true"></i>&nbsp;Eliminar</button>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
