<div class="container-fluid p-20">
    <div class="page-header clearfix">
      <h1 class="pull-left">Lecciones</h1>
      <div class="pull-right">
        <%= link_to 'Crear Lección', new_admin_track_course_unit_lesson_path(@track,@course,@unit), :class => "btn btn-primary btn-new" %>
      </div>
    </div>
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>#</th>
          <th>Título</th>
          <th>Unidad</th>
          <th>Curso</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @lessons.each do |lesson| %>
          <tr>
            <td><%= lesson.sequence %></td>
            <td><%= lesson.title %></td>
            <td><%= lesson.unit.title %></td>
            <td><%= lesson.unit.course.name %></td>
            <td>
              <%= link_to edit_admin_track_course_unit_lesson_path(@track,@course,@unit,lesson) do %>
                  <button class="btn btn-primary"><i class="fa fa-pencil" aria-hidden="true"></i>&nbsp;Editar</button>
              <% end %>
              <%= link_to [:admin,@track,@course,@unit,lesson], method: :delete, data: { confirm: '¿Está seguro?' } do %>
                  <button class="btn btn-primary"><i class="fa fa-trash" aria-hidden="true"></i>&nbsp;Eliminar</button>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>
