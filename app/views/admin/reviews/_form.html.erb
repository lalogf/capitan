<%= simple_form_for @review do |f| %>
  <div class="form-inputs">
    <%= f.association :page %><br>
    <%= f.association :question %><br>
    <%= f.association :user %><br>
    <%= f.association :reviewer %><br>
    <%= f.input :answer %><br>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn btn-primary' %>
    <%= link_to 'Cancelar', admin_reviews_path, :class => 'btn btn-danger' %>    
  </div>
<% end %>
