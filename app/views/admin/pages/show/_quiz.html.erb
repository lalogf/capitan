<% content_for :scripts do %>
  <script type="text/javascript">
  	$(document).ready(function(){
  		$(".btn-empezar").click(function(e){
  			e.preventDefault();
  			$(".first-part").fadeOut("fast")
  			setTimeout(function(){
  				$(".second-part").removeClass("sr-only");
  			}, 300);
  			$(".second-part").fadeIn("low");
  		});
  		/*Validation*/
  		$(".btn-autoevaluacion").attr("disabled", "true");
  		var disabled = function() {
	  		$(".btn-autoevaluacion").removeClass("submit");
	  		$(".btn-autoevaluacion").attr("disabled", "true");
	  	}
	  	var removeDisabled = function() {
	  		$(".btn-autoevaluacion").addClass("submit");
	  		$(".btn-autoevaluacion").removeAttr("disabled");
	  	}
  		var containerFeeling = $(".input-feeling").parent();
	  	containerFeeling.click(function(e){
	  		var inputFeeling = $(this).find(".input-feeling");
	  		containerFeeling.removeClass("checked");
	  		containerFeeling.find(".input-feeling").removeAttr("checked");
	  		inputFeeling.prop("checked", "true");
	  		if ( inputFeeling.is(":checked") ) {
	  			$(this).addClass("checked");
	  		}
	  		if($(".input-respuesta").val() != "") {
	  			removeDisabled();
	  		} else {
	  			disabled();
	  		}  
	  	});
	  	$(".input-respuesta").keyup(function(){
	  		if ($("li.checked").length != 0 && $(this).val() != "") {
	  			removeDisabled();
	  		} else {
	  			disabled();
	  		}	
	  	});
  	});
  </script>
<% end %>
